<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="200.0" styleClass="left_container" stylesheets="@../Styles/attendance-menu.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeeattendancesystem.Controllers.AttendanceMenuController">
   <children>
      <VBox layoutX="17.0" layoutY="33.0" prefHeight="150.0" prefWidth="200.0" styleClass="logo_container" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/logo.jpg" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <VBox layoutY="151.0" prefHeight="286.0" prefWidth="200.0" styleClass="menu_container" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="attendanceDashboardBtn" mnemonicParsing="false" onAction="#switchToAttendanceDashboard" text="Dashboard">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/dashboard.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="markAttendanceBtn" mnemonicParsing="false" onAction="#switchToMarkAttendance" text="Mark Attendance">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/mark-attendance.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="summaryBtn" mnemonicParsing="false" onAction="#switchToSummary" text="Summary">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/summary.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="specialJobsBtn" mnemonicParsing="false" onAction="#switchToSpecialJobs" text="Special Jobs">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/summary.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="reportsBtn" mnemonicParsing="false" onAction="#switchToReports" text="Reports">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/reports.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
      <VBox layoutX="50.0" layoutY="367.0" prefHeight="163.0" prefWidth="200.0" styleClass="logout_container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Separator>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#switchToDashboard" styleClass="logout_btn" text="Back">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/back.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
