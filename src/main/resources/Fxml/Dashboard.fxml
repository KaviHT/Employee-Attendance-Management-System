<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="dashboard_container" stylesheets="@../Styles/dashboard.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeeattendancesystem.Controllers.DashboardController">
   <children>
      <Button fx:id="sitesBtn" layoutX="249.0" layoutY="126.0" mnemonicParsing="false" onAction="#switchToSites" prefHeight="97.0" prefWidth="105.0" styleClass="sites_btn" textAlignment="RIGHT">
         <graphic>
            <ImageView fitHeight="47.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true" styleClass="sites_btn">
               <image>
                  <Image url="@../Images/sites.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="employeeBtn" layoutX="59.0" layoutY="126.0" mnemonicParsing="false" onAction="#switchToEmployees" prefHeight="97.0" prefWidth="105.0" styleClass="emp_btn">
         <graphic>
            <ImageView fitHeight="62.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="emp_btn">
               <image>
                  <Image url="@../Images/employee.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="attendanceBtn" layoutX="428.0" layoutY="126.0" mnemonicParsing="false" onAction="#switchToAttendance" prefHeight="97.0" prefWidth="105.0" styleClass="attendance_btn">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <ImageView fitHeight="56.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true" styleClass="attendance_btn">
               <image>
                  <Image url="@../Images/attendance.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="logoutBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="32.0" prefWidth="80.0" styleClass="logout_btn" text="LogOut">
         <graphic>
            <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/back.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label layoutX="240.0" layoutY="21.0" text="Dashboard">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
      <Text fill="#09417a" layoutX="72.0" layoutY="244.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Employee">
         <font>
            <Font name="Damascus Bold" size="17.0" />
         </font>
      </Text>
      <Text fill="#09417a" layoutX="281.0" layoutY="244.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sites">
         <font>
            <Font name="Damascus Bold" size="17.0" />
         </font>
      </Text>
      <Text fill="#09417a" layoutX="436.0" layoutY="244.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Attendance">
         <font>
            <Font name="Damascus Bold" size="17.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
